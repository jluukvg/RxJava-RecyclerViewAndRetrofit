<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Splash Activity Theme -->
    <style name="AppTheme.SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/testColor</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="sectionlist_header">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="sectionlist_header_title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/titleBlack</item>
        <item name="fontPath">fonts/Lato-Heavy.ttf</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="sectionlist_article_big">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="sectionlist_article_big_title">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/titleBlack</item>
        <item name="fontPath">fonts/Lato-Heavy.ttf</item>
    </style>

    <style name="sectionlist_article_big_teaser" parent="sectionlist_article_big_title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/teaserGrey</item>
        <item name="fontPath">fonts/Lato-Regular.ttf</item>
    </style>

    <style name="sectionlist_article_big_dateandbookmark" parent="sectionlist_article_big_title">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/timeAgoGrey</item>
        <item name="fontPath">fonts/Lato-Regular.ttf</item>
    </style>

</resources>
